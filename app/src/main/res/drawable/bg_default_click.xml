<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--设置为true为显示状态-->
    <item android:state_pressed="true">
        <shape>
            <!-- 文本框点击的颜色 -->
            <solid android:color="#40000000" />
        </shape>
    </item>

    <item>
        <shape>
            <!-- 文本框里面的颜色 -->
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>